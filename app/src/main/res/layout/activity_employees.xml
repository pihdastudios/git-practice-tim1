<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeesActivity">

    <TableLayout
            android:id="@+id/table_base"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            tools:layout_editor_absoluteY="-16dp" tools:layout_editor_absoluteX="118dp">
        <include layout="@layout/table_title"/>
        <include layout="@layout/table_header"/>
    </TableLayout>
    <Button
            android:id="@+id/refresh"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh"
            android:onClick="refreshButtonHandler"
            app:layout_constraintHorizontal_bias="0.700"
            android:textColor="@color/black" app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
            android:id="@+id/add_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:backgroundTint="#76ff03"
            android:onClick="addButtonHandler"
            app:layout_constraintStart_toEndOf="@+id/refresh"
            app:layout_constraintHorizontal_bias="0.300"
            android:textColor="@color/black" app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>